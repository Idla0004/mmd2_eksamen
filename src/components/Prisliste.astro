---
const { data, id } = Astro.props;
import CTAbtn from "./CTAbtn.astro";
---

<section>

{id === 1 && (
      <>
        <h2>Film</h2>
        <h3>135 mm</h3>
        <p>1–2 dage</p>
        <p>Engangskamera 10 kr ekstra — ved APS er der gebyr på 10 til 50 kr alt efter hvad der skal laves. </p>


<section class="pris-grid">
        <div class="left">

          <div class="box"></div>

        </div>

        <div class="right">

          <div>
              {id === 1 && (
                <>
                <div class="box">
                <div class="price-row"><span>{data.pristekst_1}</span><span class="pris">{data.pris_1}</span></div>
                <div class="price-row"><span>{data.pristekst_2}</span><span class="pris">{data.pris_2}</span></div>
                <div class="price-row"><span>{data.pristekst_3}</span><span class="pris">{data.pris_3}</span></div>
                </div>
                </>
              )}
            </div>
        </div>
    </section>

        <h3>120 mm</h3>
        <p>1–2 dage</p>
        <section class="pris-grid">
        <div class="left">

          <div class="box"></div>

        </div>

        <div class="right">

          <div>
              {id === 1 && (
                <>
                <div class="box">
                <div class="price-row"><span>{data.pristekst_4}</span><span class="pris">{data.pris_1}</span></div>
                </div>
                </>
              )}
            </div>
        </div>
    </section>

        <h3>E6</h3>
        <p>3-5 dage</p>
        <section class="pris-grid">
        <div class="left">

          <div class="box"></div>

        </div>

        <div class="right">

          <div>
              {id === 1 && (
                <>
                <div class="box">
                <div class="price-row"><span>{data.pristekst_5}</span><span class="pris">{data.pris_5}</span></div>
                <div class="price-row"><span>{data.pristekst_6}</span><span class="pris">{data.pris_6}</span></div>
                <div class="price-row"><span>{data.pristekst_7}</span><span class="pris">{data.pris_7}</span></div>
                </div>
                </>
              )}
            </div>
        </div>
    </section>
      </>
    )}


  {id === 2 && (
      <>
        <h2>Fra digital medie (smartphone, usb...)</h2>
        <h3>Digitale billeder til papirfotos</h3>
        <p>1–2 dage</p>

<section class="pris-grid">
        <div class="left">

          <div class="box"></div>

        </div>

        <div class="right">

          <div>
              {id === 2 && (
                <>
                <div class="box">
                <div class="price-row"><span>{data.pristekst_1}</span><span class="pris">{data.pris_1}</span></div>
                <div class="price-row"><span>{data.pristekst_2}</span><span class="pris">{data.pris_2}</span></div>
                <div class="price-row"><span>{data.pristekst_3}</span><span class="pris">{data.pris_3}</span></div>
                <div class="price-row"><span>{data.pristekst_4}</span><span class="pris">{data.pris_4}</span></div>
                <div class="price-row"><span>{data.pristekst_5}</span><span class="pris">{data.pris_5}</span></div>
                <div class="price-row"><span>{data.pristekst_6}</span><span class="pris"><CTAbtn>Kontakt os</CTAbtn></span></div>
                </div>
                </>
              )}
            </div>
        </div>
    </section>

      </>
    )}


  {id === 3 && (
  <h2>Båndvideo</h2>
  <h3>VHS til DVD (eller usb)</h3>
  <p>2–5 dage</p>

    <section class="pris-grid">
        <div class="left">

          <div class="box"></div>

        </div>

        <div class="right">

          <div>
              {id === 3 && (
                <>
                <div class="box">
                <div class="price-row"><span>{data.pristekst_1}</span><span class="pris">{data.pris_1}</span></div>
                </div>
                </>
              )}
            </div>
        </div>
    </section>

      <h3>Smal film til digitalt</h3>
      <p>10–30 dage</p>

      <section class="pris-grid">
        <div class="left">

          <div class="box"></div>

        </div>

        <div class="right">

          <div>
              {id === 3 && (
                <>
                <div class="box">
                <div class="price-row"><span>{data.pristekst_2}</span></div>
                </div>
                </>
              )}
            </div>
        </div>



    </section>

    )} 


</section>



